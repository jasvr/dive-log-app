<div class="card newDiveRegistrationCard">
  <div class="card-header">
    Create new dive site
  </div>
  <div class="card-body">
    <form action="/user/sign-up" method="post">

      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" name="name" id="name" placeholder="Please enter your full name">
      </div>

      <div class="form-group">
        <label for="username">Email:</label>
        <input type="text" class="form-control" name="username" id="username" placeholder="Please enter your email">
      </div>

      <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" class="form-control" name="password" id="password">
      </div>

      <div class="form-group">
        <label for="certification">Certification type:</label>
        <input type="text" class="form-control" name="certification" id="certification" placeholder="Please enter your certification - e.g. SSI or PADI">
      </div>

      <div class="form-group">
        <label for="certificationDate">Certification date:</label>
        <input type="text" class="form-control" name="certificationDate" id="certificationDate" placeholder="YYYY-MM-DD">
      </div>

      <button type="submit" class="btn btn-primary">Register</button>
    </form>
  </div>
</div>