<section>
  <div class="container-fluid singleDiveContainer">
    <div class="card diveCard">
      <div class="card-header">
        Dive number: {{dive.number}}
      </div>
      <div class="card-body">
        <h5 class="card-title">{{divesite.name}}</h5>
        <h6 class="card-subtitle mb-2 text-muted">{{prettyDate}}</h6>
        <p class="card-text">{{dive.notes}}</p>
        {{!-- Need update button here --}}
        <form action="/divesite/{{divesite.id}}?_method=DELETE" method="post" class="d-inline">
          <input type="submit" value="Delete" class="btn btn-danger">
        </form>
      </div>
    </div>
  </div>
</section>